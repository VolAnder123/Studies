<UserControl x:Class="GenealogicTree.WPF.Tree.Vertex"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100" MouseDown="UserControl_MouseDown">
    <Grid>
        <Rectangle Name="VertexRectangle" RadiusX="5" RadiusY="40" Fill="Gray"></Rectangle>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock TextAlignment="Center" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}{2}{1}">
                        <Binding Path="FirstName" Mode="OneTime"/>
                        <Binding Path="SurName" Mode="OneTime"/>
                        <Binding Source="{x:Static system:Environment.NewLine}"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>

            <TextBlock x:Name="WhoIsRelativeTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
