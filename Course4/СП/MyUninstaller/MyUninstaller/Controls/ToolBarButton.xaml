<Button x:Class="MyUninstaller.Controls.ToolBarButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyUninstaller.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
    <StackPanel>
                <Image x:Name="Image" Style="{StaticResource ToolBarImageStyle}"></Image>
                <TextBlock x:Name="TextBlock" HorizontalAlignment="Center"></TextBlock>
    </StackPanel>
</Button>
