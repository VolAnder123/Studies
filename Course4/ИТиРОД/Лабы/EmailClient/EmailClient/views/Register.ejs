<% layout('layout') -%>
<script type="text/javascript" src="/js/angular/RegisterController.js"></script>

<div style="margin-left:20px;">
    <form class="form-horizontal" action="/register" method="post" ng-app="RegisterApp" ng-controller="RegisterController">
        <fieldset>
            <div id="legend">
                <legend class="">Register</legend>
            </div>
            <div class="control-group myControlGroup">
                <!-- Login -->
                <label class="control-label labelWithFloat" for="Login">Login</label>
                <div class="controls inputRegister">
                    <input type="text" id="Login" name="Login" placeholder="Login" ng-model="rModel.Login" ng-blur="ValidateLogin()"/>
                    <div class="error-text">
                        <span data-valmsg-replace="true" data-valmsg-for="rModel.Login"></span>
                    </div>
                </div>
            </div>

            <div class="control-group myControlGroup">
                <!-- Password-->
                <label class="control-label labelWithFloat" for="password">Password</label>
                <div class="controls inputRegister">
                    <input type="password" id="password" name="password" placeholder="Password" ng-model="rModel.Password" ng-blur="ValidatePassword()"/>
                    <div class="error-text">
                        <span data-valmsg-replace="true" data-valmsg-for="rModel.Password"></span>
                    </div>
                </div>
            </div>

            <div class="control-group myControlGroup">
                <!-- Password -->
                <label class="control-label labelWithFloat" for="password_confirm">Confirm password</label>
                <div class="controls inputRegister">
                    <input type="password" id="password_confirm" name="password_confirm" placeholder="Confirm password" ng-model="rModel.ConfirmPassword" ng-blur="ValidateConfirmPassword()"/>
                    <div class="error-text">
                        <span data-valmsg-replace="true" data-valmsg-for="rModel.ConfirmPassword"></span>
                    </div>
                </div>
            </div>

            <div class="control-group">
                <!-- Button -->
                <div class="controls  inputRegister">
                    <input type="submit" class="btn btn-success" value="Register" ng-click="ClickSubmit($event)" />
                </div>
            </div>
        </fieldset>
    </form></div>
