unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, Buttons, Grids, Unit2;

type
  TForm1 = class(TForm)
    StringGrid1: TStringGrid;
    Edit1: TEdit;
    Edit2: TEdit;
    Label1: TLabel;
    Edit3: TEdit;
    BitButton1: TBitBtn;
    BitButton2: TBitBtn;
    BitButton3: TBitBtn;
    BitButton4: TBitBtn;
    procedure FormCreate(Sender: TObject);
    procedure BitButton1Click(Sender: TObject);
    procedure BitButton2Click(Sender: TObject);
    procedure BitButton3Click(Sender: TObject);

  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;
  Stek: CStack;

implementation

{$R *.dfm}

procedure TForm1.FormCreate(Sender: TObject);
begin
  with Stringgrid1 do
    begin
      Cells[0,0]:='name'; Cells[1,0]:='znach';
      Cells[0,1]:='b';    Cells[1,1]:='2';
      Cells[0,2]:='s';    Cells[1,2]:='2';
      Cells[0,3]:='a';    Cells[1,3]:='9';
      Cells[0,4]:='t';    Cells[1,4]:='2';
      Cells[0,5]:='k';    Cells[1,5]:='2';
      Cells[0,6]:='q';    Cells[1,6]:='3';
      Cells[0,7]:='d';    Cells[1,7]:='1';
      Cells[0,8]:='v';    Cells[1,8]:='2';
      Cells[0,9]:='z';    Cells[1,9]:='4';
    end;
  Edit1.Text:='((t+v-a/b)+(s-z^d))*k';
  Edit2.Clear;
  Edit3.Clear;
end;

procedure TForm1.BitButton2Click(Sender: TObject);
var
  i:byte;
  ch:char;
  strp:string;
begin
  strp:=Edit2.Text;
  for i:=1 to 9 do
    begin
      ch:=Stringgrid1.Cells[0,i][1];
      mszn[Ord(ch)]:=StrToFloat(Stringgrid1.Cells[1,i]);
    end;
  Edit3.Text:=FloatToStr(Stek.AV(strp));
end;

procedure TForm1.BitButton1Click(Sender: TObject);
var stri, strp: string;
begin
  stri:=Edit1.Text;
  Stek.OBP(stri,strp);
  Edit2.Text:=strp;
end;

procedure TForm1.BitButton3Click(Sender: TObject);
begin
  Edit1.Clear;
  Edit2.clear;
  Edit3.Clear;
end;

end.
