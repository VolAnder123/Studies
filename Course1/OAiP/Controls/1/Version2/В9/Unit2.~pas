unit Unit2;

interface

	type Tfn=function(x:extended):extended;
  function Intgf(a,b:extended;n:word; F:Tfn):extended;

implementation
	function Intgf(a,b:extended;n:word; F:Tfn):extended;
		  Var s,h,x:extended;
			  i:word;
		  begin
			h:=(b-a)/n; x:=a+h*(1-0.5);
                  s:=0;
			for i:=2 to n do
				begin
				  s:=s+F(x);
          x:=a+h*(i-0.5);
				end;
          Result:=h*s;
		  end;
end.
 