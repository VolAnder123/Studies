                            <chartingToolkit:Chart.Axes>
                                <chartingToolkit:CategoryAxis Orientation="X" Title="Доверительная вероятность, γ" />
                                <chartingToolkit:CategoryAxis Orientation="Y" Title="Доверительный интервал, Δ" />
                            </chartingToolkit:Chart.Axes>
                            <chartingToolkit:LineSeries Name="chart5" IndependentValueBinding="{Binding ValueX}" Title="не известно"
                                                        DependentValueBinding="{Binding ValueY}" d:DataContext="{d:DesignInstance fourth:DistributionFunctionPoint}"
                                                        DataPointStyle="{StaticResource TheoreticalLineDataPointStyle}">
                            </chartingToolkit:LineSeries>
                            <chartingToolkit:LineSeries Name="chart6" IndependentValueBinding="{Binding ValueX}" Title="известно"
                                                        DependentValueBinding="{Binding ValueY}" d:DataContext="{d:DesignInstance fourth:DistributionFunctionPoint}"
                                                        DataPointStyle="{StaticResource PracticalLineDataPointStyle}">
                            </chartingToolkit:LineSeries>
                        </chartingToolkit:Chart>

                        <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="4">
                            <TextBlock Text="Доверительная вероятность:" VerticalAlignment="Center" FontWeight="Bold" Margin="10,0" />
                            <TextBlock Text="{Binding Lambda}" VerticalAlignment="Center" MinWidth="50" />
                            <Button Content="Вычисление" Click="Button_Click_3" Margin="50,5" Padding="5" />
                        </StackPanel>

                        <chartingToolkit:Chart Grid.Row="5" Grid.ColumnSpan="2" BorderBrush="LightGray" BorderThickness="0"
                                               Title="Графики зависимости величины доверительного интервала от объема выборки" Margin="10"
