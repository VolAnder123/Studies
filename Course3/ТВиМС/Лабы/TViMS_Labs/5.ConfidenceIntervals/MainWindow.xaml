                        <!--                                                   Height="500" Width="700"></chartingToolkit:Chart>-->
                        <!--                        </StackPanel>-->
                    </Grid>
                </ScrollViewer>
            </TabItem>




            <TabItem Name="tab2" Header="Для дисперсии СВ" d:DataContext="{d:DesignInstance fourth:InputViewModel}">
                <ScrollViewer HorizontalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
