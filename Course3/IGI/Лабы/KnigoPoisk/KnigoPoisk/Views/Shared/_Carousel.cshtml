@model List<KnigoPoisk.Models.CarouselModel> 

<div class="carousel slide carousel-sync" data-ride="carousel" data-pause="false">
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox" style="text-align: center; background-image: linear-gradient(rgba(0,0,0,.0001) 0,rgba(0,0,0,.5) 100%)">
        @if ((Model.Count > 0) && (Model[0] != null))
        {
            <a class="item active" href="@Url.Action("Details", Model[0].ControllerName, new {id = Model[0].Id}, null)">
                <div>
                    <div class="carousel-header" style="overflow: hidden; color: #ffffff ">
                        <span style="top: 1px; position: absolute; font-size: 15px;">@Model[0].CarouselName</span>
                    </div>
                    <img src="/Pictures/@Model[0].Photo" alt="" />
                    <div class="carousel-description" style="overflow: hidden; color: #ffffff">
                        <span style="top: 1px; position: absolute; font-size: 10px;">@Model[0].Name</span>
                    </div>
                </div>
            </a>


            for (int i = 1; (i < Model.Count) && (i <= 2); i++)
            {
                <a class="item" href="@Url.Action("Details", Model[i].ControllerName, new {id = Model[i].Id}, null)">
                    <div>
                        <div class="carousel-header" style="overflow: hidden; color: #ffffff">
                            <span style="top: 1px; position: absolute; font-size: 15px;">@Model[0].CarouselName</span>
                        </div>
                        <img src="/Pictures/@Model[i].Photo" alt="" />
                        <div class="carousel-description" style="overflow: hidden; color: #ffffff">
                            <span style="top: 1px; position: absolute; font-size: 10px;">@Model[i].Name</span>
                        </div>
                    </div>
                </a>
            }
        }
    </div>
</div>

