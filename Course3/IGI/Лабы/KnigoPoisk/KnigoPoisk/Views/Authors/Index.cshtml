@using KnigoPoisk.Helpers
@model IEnumerable<Entities.Author>

@{
    ViewBag.Title = "Все авторы";
}

<h2>@ViewBag.Title</h2>

@if (Request.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Editor")))
{
    <div class="pull-left">
        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Добавить", "Create", "Authors", routeValues: null, htmlAttributes: new { @class = "btn btn-primary" })
    </div>
}

<table class="table" style="margin-top: 50px">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.NameRus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameOriginal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlaceOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeadDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nationality)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (Request.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Editor")))
                {
                    <div class="pull-left">
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Редактировать", "Edit", "Authors", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Удалить", "Delete", "Authors", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })
                    </div>
                }
                <div class="pull-left">
                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-search'></span>", "Просмотреть", "Details", "Authors", routeValues: new { id = item.Id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                    &nbsp;
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameRus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameOriginal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeadDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationality)
            </td>
        </tr>
    }

</table>
