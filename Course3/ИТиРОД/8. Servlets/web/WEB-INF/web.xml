<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!--Используем класс PrintAllStudentsServlet как сервлет
    задаем имя для этого сервлета-->
    <servlet>
        <servlet-name>printAllStudentsServlet</servlet-name>
        <servlet-class>servlet.PrintAllStudentsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!--Привязываем сервлет к адресу страницы
    раз тут адрес "/" - то страница будет главной-->
    <servlet-mapping>
        <servlet-name>printAllStudentsServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>




    <servlet>
        <servlet-name>addStudentServlet</servlet-name>
        <servlet-class>servlet.AddStudentServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>addStudentServlet</servlet-name>
        <url-pattern>/addStudent</url-pattern>
    </servlet-mapping>




    <servlet>
        <servlet-name>deleteStudentServlet</servlet-name>
        <servlet-class>servlet.DeleteStudentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteStudentServlet</servlet-name>
        <url-pattern>/deleteStudent</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>editStudentServlet</servlet-name>
        <servlet-class>servlet.EditStudentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>editStudentServlet</servlet-name>
        <url-pattern>/editStudent</url-pattern>
    </servlet-mapping>
</web-app>